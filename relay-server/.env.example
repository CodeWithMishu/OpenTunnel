# OpenTunnel Relay Server - Environment Configuration

# Server port (for HTTP)
PORT=8080

# HTTPS port (if using HTTPS)
HTTPS_PORT=8443

# Domain for tunnel URLs (e.g., tunnel.example.com)
# Subdomains will be: <random>.tunnel.example.com
DOMAIN=localhost

# Enable HTTPS (requires SSL_CERT and SSL_KEY)
USE_HTTPS=false

# Path to SSL certificate file
SSL_CERT=

# Path to SSL private key file
SSL_KEY=

# Maximum number of concurrent tunnels
MAX_TUNNELS=1000

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Log level: debug, info, warn, error
LOG_LEVEL=info
